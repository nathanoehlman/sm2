{
    "couchurl": "http://localhost:5984/",
    "meshdb": "steelmesh",
    "bridges": ["redis"],

    "locale": "en_US",

    "server": {
        "port": 6633,
        "resourceTimeout": 10,
        "workers": "auto"
    },
    
    "monitor": {
        "checkInterval": 300,
        "checkTimeout": 30,
        "reconnectDelay": 30
    },
    
    "dashboard": {
        "port": 3274
    },
    
    "admin": {
        "url": "http://admin:steelmesh@localhost:5984"
    },
    
    "redis": {
        "port": 6379,
        "host": "localhost"
    },
    
    "allocator": {
        "port": 9090,
        "enabled": "true",
        "seaport": {
            "secret": "testsecret"
        }
    },
    
    "nginx": "/usr/local/nginx",
    
    "logFlushInterval": 10
}